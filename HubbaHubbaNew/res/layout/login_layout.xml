<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden" >
	
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <TextView
            android:id = "@+id/title"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logIn"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:textColor="#FFF" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >
        
	    <ImageView 
	            android:contentDescription="Hubba Hubba Photo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/gettinthere"
	            />
	</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <EditText
        android:id = "@+id/username"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/username" />
    </RelativeLayout>
    
     <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

       <EditText
        android:id = "@+id/password"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/password" />

    </RelativeLayout>
    
     
      <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="35dp">

        <CheckBox
            android:id="@+id/CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/rememberPassword"
            android:textColor="#FFF" />

        <TextView
            android:id="@+id/rememberPassword"
            android:textIsSelectable="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/CheckBox"
            android:layout_alignBottom="@+id/CheckBox"
            android:layout_alignParentRight="true"
            android:hint="@string/rememberPassword"
            android:textColor="#FFF" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/logInButton"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:layout_centerVertical="true"
            android:text="@string/logIn"
            android:background="@drawable/button_background_3"
            android:textColor="@drawable/button_color_3" />

    </RelativeLayout>

</LinearLayout>