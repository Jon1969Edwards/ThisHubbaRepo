<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    
    
    <item android:state_selected="true" >
        <shape>
            <gradient
                android:startColor="#000"
                android:centerColor="#222"
                android:endColor="#000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#000" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    
